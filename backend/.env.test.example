# Environment variables for integration tests
# Copy this file to .env.test and replace the values with your real credentials

# Environment
NODE_ENV=test

# Server port
PORT=3001

# Database
# Option 1: Local database for tests
DATABASE_URL="postgresql://username:password@localhost:5432/database_name_test"
DATABASE_USER="username"
DATABASE_PASSWORD="password"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="database_name_test"

# Option 2: Supabase remote database
# DATABASE_URL="postgresql://postgres:password@db.your-project.supabase.co:5432/postgres"
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_PASSWORD=your-db-password
SUPABASE_DB_ID=your-db-id

# JWT
JWT_SECRET=secure_test_secret_key
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI (for chatbot)
OPENAI_API_KEY=your_openai_api_key

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000
