{
  "name": "ligenia-backend",
  "version": "1.0.0",
  "description": "Backend for the LIGENIA sports league management platform",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "prestart": "node scripts/deploy/ensure-logs-dir.js",
    "start": "node dist/app.js",
    "predev": "node scripts/deploy/ensure-logs-dir.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:clean": "fuser -k 3000/tcp || true && npm run predev && ts-node-dev --respawn --transpile-only src/app.ts",
    "restart": "npm run dev:clean",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    
    "test:unit": "jest --config=jest.config.js --testMatch='**/tests/unit/**/*.test.ts'",
    "test:unit:watch": "jest --config=jest.config.js --testMatch='**/tests/unit/**/*.test.ts' --watch",
    
    "test:integration": "NODE_ENV=test ./scripts/test/run-integration-tests.sh",
    "test:integration:watch": "NODE_ENV=test npx dotenv-cli -e .env.test -- jest --config=jest.config.js --runInBand --testMatch='**/tests/integration/**/*.test.ts' --watch",
    "test:integration:cleanup": "NODE_ENV=test ./scripts/test/run-integration-tests.sh all cleanup",
    "test:infrastructure": "NODE_ENV=test ./scripts/test/run-integration-tests.sh infrastructure",
    "test:routes": "NODE_ENV=test ./scripts/test/run-integration-tests.sh routes",
    
    "setup:integration": "node scripts/setup-integration-tests.js",
    
    "db:test:start": "./scripts/db/db-manager.sh start test",
    "db:test:stop": "./scripts/db/db-manager.sh stop test",
    "db:test:reset": "./scripts/db/db-manager.sh restart test",
    "db:dev:start": "./scripts/db/db-manager.sh start dev",
    "db:dev:stop": "./scripts/db/db-manager.sh stop dev",
    "db:dev:reset": "./scripts/db/db-manager.sh restart dev",
    "db:status": "./scripts/db/db-manager.sh status",
    "db:generate-testdata": "ts-node scripts/data/generate-test-data.ts",
    "db:generate-testdata-for-user": "ts-node scripts/data/generate-test-data-for-user.ts",
    "db:populate-user-data": "ts-node scripts/data/populate-user-data.ts",
    
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "prisma db seed",
    
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    
    "prepare": "husky install",
    
    "admin:create": "ts-node scripts/auth/create-admin-user.ts",
    "admin:fix-role": "node scripts/auth/fix-admin-role.js",
    "admin:test-token": "node scripts/auth/test-admin-token.js",
    "auth:debug": "node scripts/auth/debug-auth-middleware.js",
    
    "sync:users": "ts-node scripts/auth/sync-supabase-users.ts",
    "player:admin": "ts-node scripts/data/create-player-and-statistics-for-admin.ts",
    "fix:statistics": "ts-node scripts/data/fix-player-statistics.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "ligenia",
    "sports",
    "league",
    "tournament",
    "api"
  ],
  "author": "LIGENIA Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "@supabase/supabase-js": "^2.49.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "inversify": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^4.28.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-class-properties": "^7.25.9",
    "@babel/plugin-transform-object-rest-spread": "^7.25.9",
    "@babel/plugin-transform-typescript": "^7.26.8",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.2.5",
    "prisma": "^6.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
